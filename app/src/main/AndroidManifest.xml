<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myproyect.transporte">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="Transporte Público"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Actividad Principal -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para seleccionar línea de transporte -->
        <activity android:name=".TransportActivity" />

        <!-- Actividad para seleccionar parada -->
        <activity android:name=".StopActivity" />

    </application>

</manifest>
